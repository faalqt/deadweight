<%- include('partials/header') %> 
<%- include('partials/loggedIn_header') %> 

<div class="container meals">
    <h2>add meal</h2>
    <form method="post">
        <div class="row">
            <div class="form-group col-md-12">
                <label for="foodName">Food Name</label>
                <input type="text" class="form-control" name="foodName" id="foodName">
            </div>
            <div class="form-group col-md-3">
                <label for="calories">Calories</label>
                <input class="form-control" name="calories" id="calories">
            </div>
            <div class="form-group col-md-3">
                <label for="protein">Protein (Optional)</label>
                <input class="form-control" name="protein" value='0' id="protein">
            </div>
            <div class="form-group col-md-3">
                <label for="carbs">Carbohydrates (Optional)</label>
                <input class="form-control" name="carbs" value='0' id="carbs">
            </div>
            <div class="form-group col-md-3">
                <label for="fats">Fats (Optional)</label>
                <input class="form-control" name="fats" value='0' id="fats">
            </div>
            <div class="col-md-12">
                <button type="submit" class="col-lg-12 btn btn-primary" href="/dashboard">add</button>
            </div>
        </div>
    </form>
</div>

<%- include('partials/footer') %> 